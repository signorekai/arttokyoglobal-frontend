---
import type { CollectionStatus } from "../data/collections";

export interface Props {
  status: CollectionStatus;
}

const properties: {
  [key in CollectionStatus]: {
    title: string;
    class: string;
  };
} = {
  CurrentlyMinting: {
    title: "Currently Minting",
    class: "bg-red text-white",
  },
  MintingPaused: { title: "Minting Paused", class: "bg-grey-mid text-white" },
  FinishedMinting: { title: "Minting Completed", class: "bg-peach text-black" },
};

const { status } = Astro.props;
---

<div class={`mt-1 py-2 px-5 ${properties[status].class}`}>
  <h5 class="leading-none">{properties[status].title}</h5>
</div>
