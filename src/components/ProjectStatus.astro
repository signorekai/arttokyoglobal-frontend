---
import { CollectionStatus } from "../data/collections";

export interface Props {
  status?: CollectionStatus;
}

const properties: {
  [key in CollectionStatus]: {
    title: string;
    class: string;
  };
} = {
  CurrentlyMinting: {
    title: "Currently Minting",
    class: "bg-grey-dark text-white",
  },
  MintingPaused: { title: "Minting Paused", class: "" },
  FinishedMinting: { title: "Minting Completed", class: "" },
};

const { status } = Astro.props;
---

<div class={`mt-1 py-2 px-5 ${properties[status].class}`}>
  <h5 class="leading-none">{properties[status].title}</h5>
</div>
