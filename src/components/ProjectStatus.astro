---
import type { CollectionStatus } from "../data/collections";

export interface Props {
  status: CollectionStatus;
}

const properties: {
  [key in CollectionStatus]: {
    title: string;
    className: string;
  };
} = {
  CurrentlyMinting: {
    title: "Currently Minting",
    className: "bg-red text-white",
  },
  MintingPaused: {
    title: "Minting Paused",
    className: "bg-grey-dark text-white",
  },
  FinishedMinting: {
    title: "Minting Completed",
    className: "bg-grey-mid/25 text-white",
  },
};

const { status } = Astro.props;
---

<div class={`mt-1 py-2 px-5 inline-block ${properties[status].className}`}>
  <h5 class="leading-none">{properties[status].title}</h5>
</div>
