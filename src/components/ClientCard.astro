---
export interface Props {
  aspectRatio: string;
  backgroundImage: string;
  link: string;
}

const { aspectRatio, backgroundImage, link = "", ...props } = Astro.props;

const Wrapper = link.length > 0 ? "a" : Fragment;
---

<Wrapper :href={`\`${link}\``}>
  <div
    {...props}
    class="rounded-4xl border-6 border-white bg-cover bg-center shadow-card"
    x-bind:style={`\`background-image: url(${backgroundImage}); aspect-ratio: ${aspectRatio}\``}
  >
  </div>
</Wrapper>
