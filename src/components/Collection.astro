---
export interface Props {
  collection: {
    coverImg: string;
    mintPrice: number;
    title: string;
    artist: {
      name: string;
    };
  };
}

import CarouselCard from "../components/CarouselCard.astro";
import Card from "../components/Card.astro";

import ethLogo from "../images/eth-logo.png";

const { collection } = Astro.props;
---

<CarouselCard className="w-2/3 md:w-1/3 lg:w-1/4">
  <Card img={collection.coverImg}>
    <div class="meta">
      <div class="flex-1">
        <h2 class="text-red">{collection.title}</h2>
        <h6 class="uppercase text-grey-dark">By {collection.artist.name}</h6>
      </div>
      <h4 class="inline-flex flex-row pl-0 lg:pl-3 text-black">
        <img src={ethLogo} width="20" alt="" />
        <span class="pl-1">{collection.mintPrice}</span>
      </h4>
    </div>
  </Card>
</CarouselCard>

<style>
  .meta {
    @apply flex flex-col lg:flex-row w-full mx-1 mt-4 mb-2;
    @apply justify-between items-start lg:items-center;
    @apply gap-y-1;
  }
</style>
