---

<Layout title="Art Tokyo Global">
  <svg
    class="w-full absolute m-0 z-0 pointer-events-none"
    height="758"
    viewBox="0 0 1512 758"
    fill="none"
    xmlns="http://www.w3.org/2000/svg"
  >
    <g opacity="0.38" filter="url(#filter0_f_4_74)">
      <path
        d="M1482.5 678C1938.96 678 2309 304.382 2309 -156.5C2309 -617.382 1938.96 -991 1482.5 -991C1026.04 -991 656 -617.382 656 -156.5C656 304.382 1026.04 678 1482.5 678Z"
        fill="#FEC158"
        fill-opacity="0.39"></path>
      <path
        d="M624.5 551C1068.81 551 1429 330.276 1429 58C1429 -214.276 1068.81 -435 624.5 -435C180.187 -435 -180 -214.276 -180 58C-180 330.276 180.187 551 624.5 551Z"
        fill="#DE2F39"
        fill-opacity="0.207843"></path>
      <path
        d="M193 144.23L204.361 124.624L215.596 122L193 144.23Z"
        fill="#DE2F39"
        fill-opacity="0.207843"></path>
    </g>
    <defs>
      <filter
        id="filter0_f_4_74"
        x="-260"
        y="-1071"
        width="2649"
        height="1829"
        filterUnits="userSpaceOnUse"
        color-interpolation-filters="sRGB"
      >
        <feFlood flood-opacity="0" result="BackgroundImageFix"></feFlood>
        <feBlend
          mode="normal"
          in="SourceGraphic"
          in2="BackgroundImageFix"
          result="shape"></feBlend>
        <feGaussianBlur stdDeviation="40" result="effect1_foregroundBlur_4_74"
        ></feGaussianBlur>
      </filter>
    </defs>
  </svg>
  <main class="relative z-10">
    <section
      class="container container-grid lg:max-h-screen-9/10 py-8 lg:py-20"
    >
      <div
        class="lg:col-start-2 col-span-4 lg:col-span-5 flex justify-center items-center"
      >
        <Token
          className="w-screen-3/4 lg:w-auto lg:max-h-screen-1/3 lg:max-h-screen-2/3 lg:h-140"
          img="/token-1.jpg"
          aspectRatio="430 / 573"
        />
      </div>
      <div
        class="col-span-4 flex flex-col justify-center items-center px-2 py-6 lg:px-0"
      >
        <h1 class="text-center md:text-right mb-1">Collect Digital Art</h1>
        <p
          class="font-trade-gothic text-body tracking-wider text-center md:text-right"
        >
          from more than 2,000 of our talented artists from Singapore and other
          ASEAN countries
        </p>
        <a
          href="/artists"
          class="btn btn--black btn--standard md:self-end my-3 px-7 py-2"
          ><h4>See our artists</h4>
        </a>
      </div>
    </section>
    <section class="w-full bg-grey-darker text-white snap-start">
      <div class="px-10 pt-10 pb-0 md:pb-4 lg:pb-10">
        <h5 class="alt text-center md:text-right">Featured collection</h5>
        <h1 class="text-center md:text-right text-white mt-2">
          {featuredCollections[0].title}
        </h1>
        <div
          class="flex flex-col md:flex-row gap-y-0.5 items-center md:justify-end mt-1"
        >
          <ProjectStatus status={featuredCollections[0].status} />
          <h4 class="inline-block md:pl-5 pt-1 md:pt-0">
            By {featuredCollections[0].artist.name}
          </h4>
          <div class="flex flex-row items-center">
            <h4 class="inline-block md:pl-5 font-normal">
              <strong>{featuredCollections[0].tokens.length}</strong>
              of <strong>{featuredCollections[0].totalTokens}</strong> minted
            </h4>
            <h4 class="inline-flex flex-row pl-3 justify-center items-center">
              <img src={ethLogo} width="20" alt="" />
              <span class="pl-1">{featuredCollections[0].mintPrice}</span>
            </h4>
          </div>
        </div>
      </div>
      <Carousel className="pb-10 lg:pb-20" data={featuredCollections[0].tokens}>
        <div slot="template" class="carousel-item w-2/3 lg:w-1/4">
          <div
            class="rounded-4xl border-6 border-white bg-cover bg-center shadow-card"
            :style="`background-image: url(${item.src}); aspect-ratio: ${item.width} / ${item.height}`"
          >
          </div>
        </div>
      </Carousel>
    </section>
    <section class="relative m-0 md:mt-12">
      <div
        class="z-0 pointer-events-none container container--xl absolute top-0 left-1/2 -translate-x-1/2 mt-4 md:mt-0 w-[calc(100vw_-_2rem)] h-4/5 rounded-4xl"
      >
      </div>
      <div class="container relative z-10">
        <div class="pt-4 md:pt-8">
          <div
            class="mt-8 md:mt-0 px-4 md:max-h-10 flex flex-col gap-y-1 md:flex-row justify-center items-center md:items-start md:justify-between"
          >
            <a
              href="/collections"
              class="btn btn--black btn--standard inline-flex px-7 py-2"
              ><h4>View all collections</h4>
            </a>
            <Dropdown
              label="Browse"
              id="allCollections"
              selects={[
                { label: "Currently Minting", event: "CurrentlyMinting" },
                { label: "Minting Completed", event: "FinishedMinting" },
                { label: "Minting Paused", event: "MintingPaused" },
              ]}
            />
          </div>
        </div>
      </div>

      <div class="container">
        <Carousel
          listenTo="allCollections"
          filters={{
            CurrentlyMinting: {
              field: "status",
              value: "CurrentlyMinting",
            },
            FinishedMinting: {
              field: "status",
              value: "FinishedMinting",
            },
            MintingPaused: {
              field: "status",
              value: "MintingPaused",
            },
          }}
          data={collections}
          buttonPosition={"outside"}
          className="lg:pt-2"
          activeCellWidth="100%"
          cellAlign="center"
          wrapAround={false}
        >
          <div slot="template" class="carousel-item w-2/3 md:w-1/3 lg:w-1/4">
            <a :href="`/collections/${item.slug}`">
              <Collection />
            </a>
          </div>
        </Carousel>
      </div>
    </section>
  </main>
  <Footer />
</Layout>

