---
import Layout from "../layouts/Layout.astro";
import Carousel from "../components/Carousel.astro";
import CarouselCard from "../components/CarouselCard.astro";
import Card from "../components/Token.astro";

const featuredCollections = [
  {
    title: "Abstract Odyssey",
    status: "CurrentlyMinting",
    artist: {
      name: "Rachael Goto",
    },
    mintPrice: 0.4,
    tokens: [
      {
        title: "Token 1",
        src: "/token-1.jpg",
        width: 5616,
        height: 3744,
      },
      {
        title: "Token 2",
        src: "/token-2.jpg",
        width: 2631,
        height: 2629,
      },
      {
        title: "Token 3",
        src: "/token-3.jpg",
        width: 2160,
        height: 2160,
      },
      {
        title: "Token 4",
        src: "/token-4.jpg",
        width: 3453,
        height: 5180,
      },
      {
        title: "Token 1",
        src: "/token-1.jpg",
        width: 5616,
        height: 3744,
      },
      {
        title: "Token 2",
        src: "/token-2.jpg",
        width: 2631,
        height: 2629,
      },
    ],
  },
];
---

<Layout title="Art Tokyo Global">
  <svg
    class="w-screen fixed z-0 pointer-events-none"
    height="758"
    viewBox="0 0 1512 758"
    fill="none"
    xmlns="http://www.w3.org/2000/svg"
  >
    <g opacity="0.38" filter="url(#filter0_f_4_74)">
      <path
        d="M1482.5 678C1938.96 678 2309 304.382 2309 -156.5C2309 -617.382 1938.96 -991 1482.5 -991C1026.04 -991 656 -617.382 656 -156.5C656 304.382 1026.04 678 1482.5 678Z"
        fill="#FEC158"
        fill-opacity="0.39"></path>
      <path
        d="M624.5 551C1068.81 551 1429 330.276 1429 58C1429 -214.276 1068.81 -435 624.5 -435C180.187 -435 -180 -214.276 -180 58C-180 330.276 180.187 551 624.5 551Z"
        fill="#DE2F39"
        fill-opacity="0.207843"></path>
      <path
        d="M193 144.23L204.361 124.624L215.596 122L193 144.23Z"
        fill="#DE2F39"
        fill-opacity="0.207843"></path>
    </g>
    <defs>
      <filter
        id="filter0_f_4_74"
        x="-260"
        y="-1071"
        width="2649"
        height="1829"
        filterUnits="userSpaceOnUse"
        color-interpolation-filters="sRGB"
      >
        <feFlood flood-opacity="0" result="BackgroundImageFix"></feFlood>
        <feBlend
          mode="normal"
          in="SourceGraphic"
          in2="BackgroundImageFix"
          result="shape"></feBlend>
        <feGaussianBlur stdDeviation="40" result="effect1_foregroundBlur_4_74"
        ></feGaussianBlur>
      </filter>
    </defs>
  </svg>
  <main class="relative z-10">
    <section
      class="container container-grid lg:max-h-screen-9/10 py-8 lg:py-20"
    >
      <div
        class="lg:col-start-2 col-span-4 lg:col-span-5 flex justify-center items-center"
      >
        <Card
          className="w-screen-3/4 lg:w-auto md:max-h-screen-1/3 lg:max-h-screen-2/3 lg:h-140"
          img="/token-1.jpg"
          aspectRatio="430 / 573"
        />
      </div>
      <div
        class="col-span-4 flex flex-col justify-center items-center px-2 py-6 lg:px-0"
      >
        <h1 class="text-center md:text-right mb-1">Collect Digital Art</h1>
        <p
          class="font-trade-gothic text-body tracking-wider text-center md:text-right"
        >
          from more than 2,000 of our talented artists from Singapore and other
          ASEAN countries
        </p>
        <a
          href="/artists"
          class="btn btn--black btn--standard md:self-end my-3 px-7 py-2"
          ><h4>See our artists</h4>
        </a>
      </div>
    </section>
    <section class="w-full bg-grey-darker text-white snap-start">
      <div class="px-10 py-10">
        <h5 class="alt text-right">Featured collection</h5>
        <h1 class="text-right text-white">{featuredCollections[0].title}</h1>
      </div>
      <Carousel className="lg:pb-20">
        {
          featuredCollections[0].tokens.map((token) => (
            <CarouselCard>
              <Card
                img={token.src}
                aspectRatio={`${token.width} / ${token.height}`}
                title={token.title}
              />
            </CarouselCard>
          ))
        }
      </Carousel>
    </section>
  </main>
</Layout>

